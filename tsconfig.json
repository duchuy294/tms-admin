{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "allowSyntheticDefaultImports":true,
        "lib": [
            "es2016",
            "dom",
            "es2015.promise"
        ],
        "module": "es2020",
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./dist/out-tsc",
        "paths": {
            "@/*": [
                "./app/*"
            ],
            "@/utility/*": [
                "./app/modules/utility/*"
            ]
        },
        "sourceMap": false,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "googlemaps"
        ]
    }
}
